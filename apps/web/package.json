{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --webpack",
    "dev:turbo": "next dev --turbopack",
    "dev:stable": "next dev --webpack",
    "dev:emu": "NEXT_PUBLIC_USE_FIREBASE_EMULATORS=true next dev --webpack -p ${PORT:-3000}",
    "build": "next build --webpack",
    "build:turbo": "next build --turbopack",
    "start": "next start",
    "typecheck": "tsc -p tsconfig.typecheck.json --noEmit",
    "typecheck:fandom": "tsc -p tsconfig.typecheck.fandom.json --noEmit",
    "lint": "eslint",
    "clean": "rm -rf .next",
    "test": "vitest run -c vitest.config.ts",
    "test:watch": "vitest -c vitest.config.ts",
    "test:ci": "NODE_OPTIONS=--max-old-space-size=4096 vitest run -c vitest.config.ts --pool=forks --poolOptions.forks.singleFork",
    "smoke:cast:preflight": "node scripts/cast-smoke-preflight.mjs",
    "smoke:cast:preflight:auth": "node scripts/cast-smoke-preflight.mjs --cookie-file \"${TRR_CAST_SMOKE_COOKIE_FILE:-}\"",
    "test:e2e": "playwright test -c playwright.config.ts",
    "test:e2e:cast": "playwright test -c playwright.config.ts tests/e2e/admin-cast-tabs-smoke.spec.ts",
    "test:e2e:cast:live": "E2E_CAST_LIVE=1 playwright test -c playwright.config.ts tests/e2e/admin-cast-tabs-live-smoke.spec.ts",
    "test:e2e:headed": "playwright test -c playwright.config.ts --headed",
    "db:migrate": "node ./scripts/run-migrations.mjs"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@supabase/supabase-js": "^2.93.3",
    "firebase": "^12.1.0",
    "firebase-admin": "^12.6.0",
    "next": "16.1.6",
    "pg": "^8.16.3",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^20",
    "@types/pg": "^8.15.6",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv": "^17.2.3",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "jsdom": "^27.4.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest-axe": "^0.1.0",
    "vite-tsconfig-paths": "^5.1.3",
    "vitest": "^2.1.4"
  },
  "engines": {
    "node": ">=20"
  }
}
